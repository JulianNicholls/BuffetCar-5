<div class="comment">
  <hr />
  <div class="row">
    <div class="col-sm-2">
      <section class="chef-info text-center">
        <%= link_to gravatar_for(comment.chef, size: 60), comment.chef %>
      </section>
    </div>
    <div class="col-sm-8">
      <p><%= comment.content %></p>
      <span class="quiet">
        <small><%= time_ago_in_words comment.created_at %> ago by <%= comment.chef.name %></small>
      </span>
    </div>
  </div>
</div>
