<%= render 'shared/form_errors', object: @chef %>

<%= form_for @chef, html: { class: 'form-horizontal', role: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 col-sm-offset-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Enter your name', autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, 'Email Address', class: 'col-sm-2 col-sm-offset-2 control-label' %>
    <div class="col-sm-6">
      <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email address' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'col-sm-2 col-sm-offset-2 control-label' %>
    <div class="col-sm-6">
      <%= f.password_field :password, class: 'form-control', placeholder: 'Choose a password (min 6 characters)' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirm Password', class: 'col-sm-2 col-sm-offset-2 control-label' %>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Re-enter the password' %>
    </div>
  </div>

  <% unless @chef.new_record? %>
    <div class="form-group">
      <%= f.label :biography, 'Bio', class: 'col-sm-2 col-sm-offset-2 control-label' %>
      <div class="col-sm-6">
        <%= f.text_area :biography, class: 'form-control', rows: 5, placeholder: 'Tell us a little about yourself' %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-4">
      <%= f.submit (@chef.new_record? ? 'Sign up' : 'Update Profile'),
                   class: 'btn btn-primary btn-custom btn-lg' %>
    </div>
  </div>
<% end %>
