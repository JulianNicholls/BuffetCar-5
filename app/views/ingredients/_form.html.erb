<%= render 'shared/form_errors', object: @ingredient %>

<%= form_for @ingredient, html: { class: 'form-horizontal', role: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name of Ingredient', autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit (@ingredient.new_record? ? 'Add new Ingredient' : 'Update Ingredient'),
                   class: 'btn btn-primary btn-custom btn-lg' %>
    </div>
  </div>
<% end %>
