<% object.each do |recipe| %>
  <div class="row">
    <div class="col-sm-2">
      <section class="chef-info text-center">
        <%= gravatar_for recipe.chef, size: 120 %>
      </section>
    </div>
    <div class="col-sm-8 well list-summary">
      <h4><%= link_to recipe.name, recipe %></h4>
      <p><%= truncate(recipe.description, length: 150) %></p>
      <% if current_chef == recipe.chef %>
        <div class="pull-right recipe-actions" >
          <%= link_to 'Edit Recipe', edit_recipe_path(recipe),
                       class: 'btn btn-xs btn-warning' %>
          <%= link_to 'Delete Recipe', recipe_path(recipe), method: :delete,
                      data: { confirm: 'Are you sure you want to delete this recipe' },
                      class: 'btn btn-xs btn-danger' %>
        </div>
      <% end %>
      <p>
        <span class="quiet">
          <small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small>
        </span>
      </p>
    </div>
  </div>
<% end %>
