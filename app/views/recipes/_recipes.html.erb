<% object.each do |recipe| %>
  <div class="row">
  <% if show_chef %>
    <div class="col-sm-2">
      <section class="chef-info text-center">
        <%= link_to gravatar_for(recipe.chef, size: 120), recipe.chef %>
      </section>
    </div>
    <div class="col-sm-10 well list-summary">
  <% else %>
    <div class="col-sm-10 col-sm-offset-1 well list-summary">
  <% end %>
      <h3 class="text-center"><%= link_to recipe.name, recipe %></h3>
      <p><%= truncate(recipe.description, length: 150) %></p>
      <% if recipe.ingredients.any? %>
        <p>Ingredients: <%= render recipe.ingredients %></p>
      <% end %>
      <% if logged_in? && (current_chef.admin? || current_chef == recipe.chef) %>
        <div class="pull-right recipe-actions" >
          <%= link_to 'Edit Recipe', edit_recipe_path(recipe),
                      class: 'btn btn-xs btn-primary btn-custom' %>
          <%= link_to 'Delete Recipe', recipe_path(recipe), method: :delete,
                      data: { confirm: 'Are you sure you want to delete this recipe' },
                      class: 'btn btn-xs btn-danger' %>
        </div>
      <% end %>
      <p>
        <span class="quiet">
          <small>
          <% if recipe.created_at == recipe.updated_at %>
            Created <%= time_ago_in_words recipe.created_at %> ago
            <% if show_chef %>
              by <%= recipe.chef.name %>
            <% end %>
          <% else %>
            <% if show_chef %>
              Created <%= time_ago_in_words recipe.created_at %> ago
              by <%= recipe.chef.name %>,
            <% else %>
              Created <%= time_ago_in_words recipe.created_at %> ago,
            <% end %>
            last updated <%= time_ago_in_words recipe.updated_at %> ago
          <% end %>
          </small>
        </span>
      </p>
    </div>
  </div>
<% end %>


